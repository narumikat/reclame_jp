<div class="container">
  <div class="user-dashboard mb-4">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3 mt-4 border d-none d-md-flex">
        <%= render 'shared/sidebar' %>
      </div>
      <!-- Main content -->
      <div class="col-md-9 col-12">
        <div class="mt-4 mx-2">
          <div class="border p-4 welcome-dashboard mb-4">
            <h3 class="text-center">Bem vindo ao <span>Reclame JP</span> <br>
              <strong><%= current_user.first_name %></strong></h3>
          </div>
          <div class="border p-4">
            <h3>Esta com algum <span>problema?</span></h3>
            <p>Crie uma reclamação</p>
            <div class="d-flex justify-content-center">
              <button class="btn-red">
                <i class="fa-solid fa-bullhorn me-2"></i>
                Nova reclamação
              </button>
            </div>
          </div>
          <div class="companies mb-4">
            <div class="d-flex justify-content-between align-items-center my-4">
              <h2>Ultimas empresas</h2>
              <%= link_to companies_path do %>
                <i class="fa-solid fa-circle-arrow-right"></i>
              <% end %>
            </div>
            <div class="d-flex flex-row flex-nowrap overflow-auto">
              <% @companies.sort_by { |i| -i.created_at.to_i }.last(5).each do |company| %>
                <div class="col-10 col-md-4 m-2">
                  <%= render 'companies/card', company: company %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="complaints pt-4">
            <div class="my-4">
              <h2>Ultimas reclamações</h2>
            </div>
            <div class="d-flex flex-row flex-nowrap overflow-auto">
              <% @complaints.sort_by { |i| -i.created_at.to_i }.last(5).each do |complaint| %>
                <div class="m-2 col-9 col-md-4">
                  <%= render 'complaints/card', complaint: complaint %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <%= simple_form_for @company do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :company_name, label: "Company Name", required: true %>
      <%= f.input :company_register_number, label: "Company Register Number", required: true %>
      <%= f.input :company_address, label: "Address" %>
      <%= f.input :company_city, label: "City" %>
      <%= f.input :company_state, label: "State" %>
      <%= f.input :company_zip_code, label: "Zip Code" %>
      <%= f.input :company_country, label: "Country" %>
      <%= f.input :company_phone_number, label: "Phone Number" %>
      <%= f.input :company_website, label: "Website" %>
      <%= f.input :company_social_media, label: "Social Media Links", as: :text %>
      <%= f.input :company_description, label: "Description", as: :text %>
      <%= f.input :company_contact_name, label: "Contact Name" %>
      <%= f.input :company_contact_email, label: "Contact Email", as: :email %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
<div class="container">
  <% if user_signed_in? %>
    <% if current_user.is_company? %>
      <h2>Hello Company</h2>
      <ul>
        <li><%= link_to 'Go to your profile', user_path(current_user) %></li>
        <li><%= link_to 'See all companies', companies_path %></li>
      </ul>
      <% if !current_user.companies.blank? %>
        <ul>
          <% current_user.companies.each do |company| %>
            <li><%= link_to "Go to your company: #{company.company_name}", company_path(company) %></li>
          <% end %>
        </ul>
      <% else %>
        <%= link_to 'Create your company profile', new_company_path %>
      <% end %>
    <% else %>
      <ul>
        <li><%= link_to 'Create a new Complaint', new_complaint_complaints_path %></li>
      </ul>
      <% if current_user.complaints.any? %>
        <ul>
          <li><%= link_to 'See all your complaints', complaints_path(current_user) %></li>
        </ul>
      <% end %>
    <% end %>
  <% else %>
    <ul>
      <li><%= link_to 'Register', registration_type_path %></li>
      <li><%= link_to "Login", new_user_session_path %></li>
    </ul>
  <% end %>
</div>

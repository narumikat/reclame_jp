<div class="container">
  <%= render 'shared/back_btn' %>
  <div class="row d-flex">
    <div class="col-md-3 mt-2 border d-none d-md-flex flex-column">
      <% if current_user.is_company? %>
        <%= render 'shared/sidebar_company' %>
      <% else %>
        <%= render 'shared/sidebar' %>
      <% end %>
    </div>
    <div class="col-md-9 col-12 d-flex flex-column mt-2">
      <div class="border user-complaints">
        <% if current_user.is_company? %>
          <% if current_user.companies.size > 1 %>
            <h3 class="text-center">Reclamações das suas empresas</h3>
          <% else %>
            <h3 class="text-center">Reclamações da sua empresa</h3>
          <% end %>
        <% else %>
          <h3 class="text-center">Suas reclamações</h3>
        <% end %>
        <div class="mt-4 row d-flex justify-content-center">
          <% @complaints.each do |complaint| %>
            <div class="col-11 col-md-10 my-2">
              <%= render 'complaints/complaint_tab', complaint: complaint %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

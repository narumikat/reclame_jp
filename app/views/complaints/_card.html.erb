<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= complaint.title %></h5>
    <h6 class="card-subtitle mb-2 text-body-secondary"><%= complaint.company.company_name %></h6>
    <div class="d-flex justify-content-end">
      <%= link_to company_path(complaint.company, complaint) do %>
        <i class="fa-solid fa-chevron-right"></i>
      <% end %>
    </div>
  </div>
</div>
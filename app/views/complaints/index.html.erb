<%= render 'companies/company_banner', company: @company %>
<%= render 'shared/back_btn_absolute' %>
<div class="bg-white">
  <div class="container">
    <div class="py-4 row d-flex justify-content-center">
      <h3 class="text-center my-4">Reclamações da empresa<br>
        <strong><%= @company.company_name %></strong></h3>
      <% @complaints.each do |complaint| %>
        <div class="col-11 col-md-10 my-2">
          <%= render 'complaints/complaint_tab', complaint: complaint %>
        </div>
      <% end %>
    </div>
  </div>
</div>
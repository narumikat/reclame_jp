<div data-controller="suggestions">
  <form class="d-flex search-bar" role="search" action="<%= search_results_path %>" method="get">
    <input class="form-control" 
          type="search" 
          placeholder="Empresa, Tags, etc..." 
          aria-label="Search" 
          name="query"
          data-suggestions-target="companyNameInput"
          data-action="input->suggestions#autocomplete">
    <button class="btn" type="submit">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
  </form>
  <ul id="results" class="list-group mt-2" data-suggestions-target="suggestionsList"></ul>
</div>
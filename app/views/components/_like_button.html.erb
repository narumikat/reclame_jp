<div class="d-flex align-items-center like-container" data-like-target="likeContainer">
  <% if user_signed_in? %>
    <% if current_user.favorited?(item) %>
      <%= button_to path1, method: :delete, remote: true, class: 'btn-unlike', data: { action: 'like#toggleLike', 'like-target': 'likeButton', method: 'delete' } do %>
        <i class="fa-solid fa-heart me-2"></i>
      <% end %>
    <% else %>
      <%= button_to path2, remote: true, class: 'btn-like', data: { action: 'like#toggleLike', 'like-target': 'likeButton', method: 'post' } do %>
        <i class="fa-regular fa-heart me-2"></i>
      <% end %>
    <% end %>
    <span data-like-target="likeCount"><%= item.likes_count %></span>
  <% else %>
    <i class="fa-regular fa-heart me-2 btn-like"></i>
    <span data-like-target="likeCount"><%= item.likes_count %></span>
  <% end %>
</div>
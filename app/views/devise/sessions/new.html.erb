<div class="container">
  <div class="login-screen border p-4 mt-4">
    <div class="d-flex justify-content-center">
      <%= image_tag 'reclame-logo2.png' %>
    </div>
    <h2 class="my-4">Fa√ßa seu <span>Login</span></h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                required: true,
                label: "Senha",
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: 'Lembrar Senha', as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="d-flex justify-content-center">
        <%= f.button :submit, "Entrar", class: "btn-red" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
<div class="container">
  <div class="login-screen border p-4 mt-4">
    <div class="d-flex justify-content-center">
      <%= image_tag 'reclame-logo2.png' %>
    </div>
    <h2 class="my-4">Esqueceu sua senha?</h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="d-flex justify-content-center">
        <%= f.button :submit, "Me envie o email de recuperação da senha!", class: "btn-red" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>